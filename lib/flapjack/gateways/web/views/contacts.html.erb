<% page_title 'Contacts' %>

<div class="page-header">
  <h2>Contacts</h2>
</div>

<% if !@contacts || @contacts.empty? %>
  <p>No contacts</p>
<% else %>
  <table class="table table-bordered table-hover table-condensed">
    <tr>
      <th>Name</th>
    </tr>
    <% @contacts.sort_by(&:name).each do |contact| %>
    <tr>
      <td><a href="<%= @base_url %>contacts/<%= contact.id %>" title="contact details"><%= h contact.name %></a></td>
    </tr>
    <% end %>
  </table>
<% end %>

<% if @api_connected == true %>
  <a href="<%= @base_url %>edit_contacts"/>
    Edit contacts
    <span class="label label-danger">beta</span>
  </a>
<% else %>
  <span class="label label-warning">Could not connect to API URL - Edit contacts is unavailable"</span>
<% end %>
</div>
